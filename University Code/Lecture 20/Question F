#include <iostream>
#include <string>
using namespace std;

int main()
{
	int n, m;
	char c;
	while (cin >> n >> c >> m)
	{
		if (n > 3 && m > n)break;
	}
	for (int i = 0; i < n; i++)
	{
		cout << string(n-i-1,' ')<<string(i*2+1,'*')<<endl;
	}
	for (int i = 0; i < m; i++)
	{
		cout << string(2, ' ') << string(n * 2 - 5, '#')<<endl;
	}
	return 0;
}
